<Window x:Class="Przychodnia.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Przychodnia"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="login" HorizontalAlignment="Left" Height="23" Margin="268,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="156,141,0,0" TextWrapping="Wrap" Text="Nazwa użytkownika:" VerticalAlignment="Top"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="23" Margin="268,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.004,-3.08"/>
        <TextBlock HorizontalAlignment="Left" Margin="199,178,0,0" TextWrapping="Wrap" Text="Hasło" VerticalAlignment="Top"/>
        <Button x:Name="login_button" Content="Zaloguj" HorizontalAlignment="Left" Margin="268,216,0,0" VerticalAlignment="Top" Width="75" Click="Login_action"/>

    </Grid>
</Window>
